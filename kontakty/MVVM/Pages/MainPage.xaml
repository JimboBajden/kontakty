<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kontakty.MVVM.Pages.MainPage"
             Title="MainPage">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="dodawanie">
            <MenuFlyoutItem Text="dodaj"
                            Clicked="Button_Clicked"/>
        </MenuBarItem>
        <MenuBarItem Text="usuwanie">
            <MenuFlyoutItem Text="usuń zaznaczonych"
                    Clicked="Button_Clicked_1"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
   
    <Grid RowDefinitions="Auto,*,Auto" MaximumWidthRequest="1024" MinimumHeightRequest="128">
        <SearchBar Grid.Row="0" TextChanged="SearchBar_TextChanged" Margin="10"></SearchBar>
        
        <CollectionView x:Name="CensusDisplay" ItemsSource="{Binding People}" SelectionMode="Multiple" SelectionChanged="CensusDisplay_SelectionChanged"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="LightGreen" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="White" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                        <Border Grid.Row="1">
                            <Grid ColumnDefinitions="*,*,*,Auto,Auto">
                                <Label 
                                    Grid.Column="0"
                                    Text="{Binding surname}" 
                                    Padding="10,10,10,10" 
                                    FontSize="18"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap"
                                    VerticalOptions="Center" />
                                <Label 
                                    Grid.Column="1"
                                    Padding="10,10,10,10"
                                    Text="{Binding name}" 
                                    FontSize="18"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap"
                                    VerticalOptions="Center" />
                                <Label 
                                    Grid.Column="2"
                                    Padding="10,10,10,10"
                                    Text="{Binding number}" 
                                    FontSize="18"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap"
                                    VerticalOptions="Center" />
                                <Button 
                                    Grid.Column="3"
                                    Text="edytuj" 
                                    Clicked="SwipeItem_Invoked" 
                                    HorizontalOptions="Start"/> 
                                <Button 
                                     Grid.Column="4"
                                     Text="usun" 
                                     Clicked="SwipeItem_Invoked_1" 
                                     HorizontalOptions="Start"/>
                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem  Text="edytuj" Clicked="MenuFlyoutItem_Clicked"/>
                                        <MenuFlyoutItem Text="usun" Clicked="MenuFlyoutItem_Clicked_1" />
                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>
                            </Grid>
                        </Border>


                    </Grid>
                    
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="◀"  BackgroundColor="Peru" Clicked="Button_Clicked_3"/>
            <Label 
                x:Name="pager"
                Text=""
                VerticalOptions="Center" 
                HorizontalOptions="Center" ></Label>
            <Button Text="▶"  BackgroundColor="Peru" Clicked="Button_Clicked_2"/>
        </HorizontalStackLayout>
       
    </Grid>
</ContentPage>
